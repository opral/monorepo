{
  "compilerOptions": {
    "target": "ESNext",
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "strict": true,
    "declaration": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "outDir": "dist",
    "declarationMap": false
  },
  "include": ["src"],
  "exclude": ["examples", "examples/*"]
}

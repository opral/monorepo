{
	"extends": "../../tsconfig.base.json",
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.test.ts"],
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"sourceMap": false,
		"checkJs": true,
		"allowJs": true,
		"emitDeclarationOnly": true,
		"declarationMap": false,
		"skipLibCheck": true,
		"lib": ["ESNext"],
		"paths": {
			"~/*": ["./src/*"]
		}
	}
}

{
	"name": "@inlang/github-lint-action",
	"description": "This action checks for translation issues within your PRs.",
	"version": "0.1.4",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"keywords": [
		"i18n",
		"l10n",
		"translation",
		"internationalization",
		"localization",
		"action",
		"lint",
		"github"
	],
	"exports": {
		".": "./dist/index.js"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"dev": "node ./build.js",
		"build": "pnpm run format && ncc build src/index.ts",
		"test": "tsc --noEmit && vitest run --passWithNoTests --coverage --test-timeout=10000",
		"lint": "eslint ./src --fix",
		"format": "prettier --write **/*.ts",
		"clean": "rm -rf ./dist ./node_modules"
	},
	"license": "Apache-2.0",
	"devDependencies": {
		"@vercel/ncc": "^0.38.1",
		"@vitest/coverage-v8": "^0.33.0",
		"dotenv": "^16.4.1",
		"vitest": "0.34.3"
	},
	"dependencies": {
		"@actions/core": "^1.10.1",
		"@actions/github": "^6.0.0",
		"@lix-js/client": "workspace:*",
		"@inlang/sdk": "workspace:*"
	}
}

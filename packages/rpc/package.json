{
	"name": "@inlang/rpc",
	"type": "module",
	"private": true,
	"packageManager": "pnpm@10.23.0",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./router": "./dist/router.js",
		"./server": "./dist/server.js"
	},
	"scripts": {
		"build": "npm run env-variables && tsc --build",
		"dev": "npm run env-variables && tsc --watch",
		"start": "node dist/server.js",
		"test": "npm run env-variables && tsc --noEmit && vitest run --passWithNoTests --coverage",
		"env-variables": "node ./src/services/env-variables/createIndexFile.js",
		"format": "prettier ./src --write",
		"clean": "rm -rf ./dist ./node_modules"
	},
	"dependencies": {
		"@inlang/sdk": "workspace:*",
		"@types/cors": "^2.8.17",
		"body-parser": "^1.20.2",
		"cors": "^2.8.5",
		"express": "^4.18.2",
		"ts-dedent": "^2.2.0",
		"typed-rpc": "3.0.0"
	},
	"license": "Apache-2.0",
	"version": "0.3.53",
	"devDependencies": {
		"@inlang/tsconfig": "workspace:*",
		"@types/body-parser": "1.19.2",
		"@types/express": "4.17.17",
		"@vitest/coverage-v8": "2.0.5",
		"typescript": "^5.5.2",
		"vitest": "2.0.5"
	}
}

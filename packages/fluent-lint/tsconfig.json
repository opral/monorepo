{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "removeComments": false,
    "declaration": true,
    "allowJs": true
  },
  "include": ["src/**/**.ts"]
}

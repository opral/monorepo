{
	"name": "@inlang/sdk",
	"type": "module",
	"version": "0.2.0",
	"license": "Apache-2.0",
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": "./dist/index.js",
		"./test-utilities": "./dist/test-utilities/index.js",
		"./lint": "./dist/lint/index.js",
		"./messages": "./dist/messages/index.js"
	},
	"files": [
		"./dist",
		"./src"
	],
	"scripts": {
		"build": "tsc --build",
		"dev": "tsc --watch",
		"test": "tsc --noEmit && vitest run --passWithNoTests --coverage",
		"lint": "eslint ./src --fix",
		"format": "prettier ./src --write",
		"clean": "rm -rf ./dist ./.turbo ./node_modules"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"dependencies": {
		"@inlang/json-types": "*",
		"@inlang/translatable": "*",
		"@inlang/message-lint-rule": "*",
		"@inlang/module": "*",
		"@inlang/language-tag": "*",
		"@inlang/message": "*",
		"@inlang/plugin": "*",
		"@inlang/project-config": "*",
		"@inlang/result": "*",
		"@lix-js/fs": "*",
		"@sinclair/typebox": "^0.31.0",
		"deepmerge-ts": "^5.1.0",
		"solid-js": "1.6.12",
		"throttle-debounce": "5.0.0",
		"ts-dedent": "2.2.0"
	},
	"devDependencies": {
		"@lix-js/fs": "*",
		"@types/throttle-debounce": "5.0.0",
		"@vitest/coverage-v8": "^0.33.0",
		"jsdom": "22.1.0",
		"patch-package": "6.5.1",
		"tsd": "^0.25.0",
		"typescript": "5.2.2",
		"vitest": "^0.33.0"
	}
}

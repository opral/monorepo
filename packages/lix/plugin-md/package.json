{
	"name": "@lix-js/plugin-md",
	"type": "module",
	"version": "0.2.0",
	"license": "Apache-2.0",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js"
	},
	"files": [
		"dist",
		"src"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "rolldown -c",
		"typecheck": "tsc --noEmit",
		"test": "tsc --noEmit && vitest run src/",
		"test:watch": "vitest src/",
		"lint": "oxlint --tsconfig ./tsconfig.json --ignore-path .gitignore --format stylish .",
		"lint:fix": "oxlint --tsconfig ./tsconfig.json --ignore-path .gitignore --fix .",
		"dev": "rolldown --watch -c",
		"format": "prettier ./src --write"
	},
	"_comment": "Required for tree-shaking https://webpack.js.org/guides/tree-shaking/#mark-the-file-as-side-effect-free",
	"sideEffects": false,
	"dependencies": {
		"@lix-js/html-diff": "workspace:*",
		"@lix-js/sdk": "workspace:*",
		"@opral/markdown-wc": "workspace:*",
		"@sanity/diff-match-patch": "^3.1.0",
		"character-entities": "^2.0.2",
		"lit": "^3.2.1"
	},
	"devDependencies": {
		"@opral/tsconfig": "workspace:*",
		"oxlint": "^1.13.0",
		"prettier": "^3.3.3",
		"rolldown": "1.0.0-beta.36",
		"rolldown-plugin-dts": "^0.16.5",
		"typescript": "^5.5.4",
		"vitest": "4.0.0-beta.11"
	}
}

{
	"name": "@lix-js/sdk",
	"type": "module",
	"version": "0.5.0-preview.1",
	"description": "SDK for change control. Enable Git-like capabilities like versioning, history, and blame in apps and AI agents.",
	"keywords": [
		"change control",
		"version control",
		"git",
		"versioning",
		"history",
		"blame",
		"branching",
		"ai-agents",
		"sdk",
		"browser",
		"wasm",
		"json",
		"csv",
		"markdown"
	],
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/opral/lix-sdk"
	},
	"homepage": "https://lix.dev/",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./zettel-ast": "./dist/zettel-ast/index.js"
	},
	"_filesComment": "Shipping src for better debugging experience",
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"build": "node ./scripts/build.js",
		"typecheck": "tsc --noEmit -p tsconfig.json",
		"pretest": "playwright install --with-deps",
		"test": "node ./scripts/build.js --setup-only && vitest run --typecheck",
		"test:watch": "node ./scripts/build.js --setup-only && vitest --typecheck",
		"bench": "vitest bench",
		"lint": "oxlint --config .oxlintrc.json \"src/**/*.{js,ts}\" --fix",
		"dev": "node ./scripts/build.js --watch",
		"format": "prettier ./src --write",
		"clean": "rm -rf ./dist ./node_modules"
	},
	"_comment": "Required for tree-shaking https://webpack.js.org/guides/tree-shaking/#mark-the-file-as-side-effect-free",
	"sideEffects": false,
	"engines": {
		"node": ">=22"
	},
	"dependencies": {
		"@lix-js/server-protocol-schema": "workspace:*",
		"@opral/zettel-ast": "workspace:*",
		"@sqlite.org/sqlite-wasm": "^3.50.4-build1",
		"ajv": "^8.17.1",
		"chevrotain": "^11.0.3",
		"human-id": "^4.1.1",
		"kysely": "^0.28.7",
		"uuid": "^11.1.0"
	},
	"devDependencies": {
		"@codspeed/vitest-plugin": "^4.0.1",
		"@opral/tsconfig": "workspace:*",
		"@vitest/browser": "^4.0.0-beta.10",
		"@vitest/coverage-v8": "4.0.0-beta.10",
		"json-schema-to-ts": "^3.1.1",
		"oxlint": "^1.14.0",
		"playwright": "^1.55.0",
		"prettier": "^3.3.3",
		"typescript": "^5.5.4",
		"vitest": "4.0.0-beta.10"
	}
}

{
	"name": "@lix-js/plugin-json",
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"version": "1.0.0-preview.0",
	"license": "Apache-2.0",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js"
	},
	"scripts": {
		"build": "tsc --build",
		"typecheck": "tsc --noEmit",
		"test": "pnpm typecheck && vitest run",
		"test:watch": "vitest",
		"lint": "oxlint --tsconfig ./tsconfig.json --ignore-path .gitignore --format stylish .",
		"lint:fix": "oxlint --tsconfig ./tsconfig.json --ignore-path .gitignore --fix .",
		"dev": "tsc --watch",
		"format": "prettier ./src --write"
	},
	"_comment": "Required for tree-shaking https://webpack.js.org/guides/tree-shaking/#mark-the-file-as-side-effect-free",
	"sideEffects": false,
	"dependencies": {
		"@jsonjoy.com/json-pointer": "^17.63.0",
		"@lix-js/sdk": "workspace:*"
	},
	"devDependencies": {
		"@opral/tsconfig": "workspace:*",
		"@vitest/coverage-v8": "^4.0.8",
		"oxlint": "^1.14.0",
		"prettier": "^3.3.3",
		"typescript": "^5.5.4",
		"vitest": "^4.0.8"
	}
}

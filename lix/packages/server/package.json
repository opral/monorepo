{
	"name": "@lix-js/server",
	"type": "module",
	"version": "1.2.0",
	"private": true,
	"files": [
		"./dist",
		"./src"
	],
	"scripts": {
		"build": "tsc --build",
		"test": "vitest run --passWithNoTests --coverage",
		"dev": "node --loader tsx ./src/main.ts",
		"production": "NODE_ENV=production NODE_OPTIONS=\"--max-old-space-size=500 --heapsnapshot-signal=SIGUSR2\" tsx ./src/main.ts",
		"lint": "eslint ./src --fix",
		"format": "prettier ./src --write",
		"clean": "rm -rf ./dist ./node_modules"
	},
	"dependencies": {
		"@sentry/node": "^7.47.0",
		"@sentry/tracing": "^7.47.0",
		"compression": "^1.7.4",
		"cookie-session": "2.0.0",
		"dotenv": "^16.4.5",
		"express": "4.18.2",
		"globals": "^15.0.0",
		"jose": "4.15.4",
		"node-fetch": "3.3.2",
		"octokit": "3.1.2",
		"tsx": "3.12.8"
	},
	"devDependencies": {
		"eslint": "9.0.0",
		"prettier": "2.8.3",
		"@types/node": "20.12.7",
		"@lix-js/code-style": "workspace:*",
		"@types/compression": "^1.7.2",
		"@types/cookie-session": "2.0.45",
		"@types/express": "^4.17.17",
		"@vitest/coverage-v8": "0.34.3",
		"typescript": "5.2.2",
		"vitest": "0.34.3"
	},
	"license": "Apache-2.0"
}

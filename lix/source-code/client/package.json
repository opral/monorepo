{
	"name": "@lix-js/client",
	"version": "0.2.0",
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": "./dist/index.js"
	},
	"files": [
		"./dist",
		"./src"
	],
	"scripts": {
		"build": "tsc --build",
		"dev": "tsc --watch",
		"test": "vitest run --coverage --test-timeout 60000",
		"bench": "vitest bench --watch=false",
		"lint": "eslint ./src --fix",
		"format": "prettier ./src --write",
		"clean": "rm -rf ./dist ./.turbo ./node_modules"
	},
	"dependencies": {
		"@lix-js/fs": "*",
		"@octokit/types": "11.1.0",
		"isomorphic-git": "1.24.5",
		"path-browserify": "0.0.1",
		"octokit": "3.1.0",
		"solid-js": "1.7.11"
	},
	"license": "Apache-2.0",
	"devDependencies": {
		"@vitest/coverage-v8": "0.34.3",
		"typescript": "5.2.2",
		"vitest": "0.34.3"
	}
}

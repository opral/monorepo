{
	"name": "@inlang/cli",
	"version": "0.6.1",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"main": "./dist/main.js",
	"types": "./dist/main.d.ts",
	"type": "module",
	"bin": {
		"inlang": "./bin/run.js"
	},
	"engines": {
		"node": ">=16.15.0"
	},
	"files": [
		"/bin",
		"/dist"
	],
	"scripts": {
		"dev": "node ./build.js",
		"build": "cross-env NODE_ENV=production node ./build.js",
		"---- TEST ----------------------------------------------------------": "",
		"test": "tsc --noEmit && vitest run --passWithNoTests --coverage",
		"test:watch": "vitest watch --passWithNoTests --coverage",
		"---- LINT ----------------------------------------------------------": "",
		"lint": "cd ../.. && npm run lint:base ./source-code/core",
		"lint:fix": "cd ../.. && npm run lint:fix:base ./source-code/core",
		"format": "cd ../.. && npm run format:base ./source-code/core",
		"format:fix": "cd ../.. && npm run format:fix:base ./source-code/core",
		"---- OTHER ---------------------------------------------------------": "",
		"clean": "shx rm -rf dist"
	},
	"dependencies": {
		"@inlang-git/fs": "^0.0.2",
		"@sentry/node": "^7.51.2",
		"ora": "^6.3.0",
		"ts-dedent": "^2.2.0"
	},
	"devDependencies": {
		"@inlang/core": "*",
		"@inlang/rpc": "*",
		"@types/prompts": "^2.4.2",
		"commander": "^10.0.0",
		"consola": "^2.15.3",
		"esbuild": "^0.17.14",
		"fast-glob": "^3.2.12",
		"node-fetch": "^3.3.0",
		"openai": "^3.2.1",
		"prompts": "^2.4.2"
	},
	"license": "Apache-2.0"
}

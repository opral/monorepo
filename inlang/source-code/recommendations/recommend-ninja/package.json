{
	"name": "@inlang/recommend-ninja",
	"description": "A package to recommend Ninja",
	"version": "0.1.1",
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": "./dist/index.js"
	},
	"files": [
		"./dist",
		"./src"
	],
	"scripts": {
		"build": "tsc --build",
		"dev": "tsc --watch",
		"test": "tsc --noEmit && vitest run --passWithNoTests --coverage",
		"lint": "eslint ./src --fix",
		"format": "prettier ./src --write",
		"clean": "rm -rf ./dist ./node_modules"
	},
	"dependencies": {
		"@inlang/sdk": "workspace:*",
		"@lix-js/client": "workspace:*",
		"@lix-js/fs": "workspace:*",
		"@sinclair/typebox": "^0.31.17",
		"js-yaml": "^4.1.0",
		"prettier": "^3.3.3"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.9",
		"@vitest/coverage-v8": "0.33.0",
		"patch-package": "6.5.1",
		"typescript": "^5.1.3",
		"vitest": "0.33.0"
	}
}

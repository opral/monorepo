{
	"name": "@inlang/create-project",
	"type": "module",
	"version": "0.3.0",
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": "./dist/index.js"
	},
	"files": [
		"./dist",
		"./src"
	],
	"scripts": {
		"build": "tsc --build",
		"dev": "tsc --watch",
		"test": "tsc --noEmit && vitest run --passWithNoTests --coverage",
		"lint": "eslint ./src --fix",
		"format": "prettier ./src --write",
		"clean": "rm -rf ./dist ./.turbo ./coverage ./node_modules"
	},
	"dependencies": {
		"@inlang/plugin": "*",
		"@inlang/sdk": "*",
		"@inlang/project-settings": "*",
		"@lix-js/fs": "*",
		"@sinclair/typebox": "0.31.14",
		"terser": "5.19.4"
	},
	"license": "Apache-2.0",
	"devDependencies": {
		"@vitest/coverage-v8": "0.34.3",
		"typescript": "5.2.2",
		"@types/node": "20.5.9",
		"vitest": "^0.34.1"
	}
}

{
	"name": "@inlang/project-settings",
	"type": "module",
	"version": "2.4.1",
	"license": "Apache-2.0",
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": "./dist/index.js",
		"./migration": "./dist/migration/index.js"
	},
	"files": [
		"./dist",
		"./src"
	],
	"scripts": {
		"build": "tsc --build",
		"dev": "tsc --watch",
		"test": "tsc --noEmit && vitest run",
		"lint": "eslint ./src --fix",
		"format": "prettier ./src --write",
		"clean": "rm -rf ./dist ./node_modules"
	},
	"dependencies": {
		"@inlang/json-types": "workspace:*",
		"@inlang/language-tag": "workspace:*"
	},
	"devDependencies": {
		"tsd": "0.28.1",
		"typescript": "5.2.2",
		"vitest": "0.34.3"
	},
	"peerDependencies": {
		"@sinclair/typebox": "^0.31.17"
	}
}

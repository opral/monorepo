{
	"name": "vs-code-extension",
	"private": true,
	"displayName": "inlang (i18n)",
	"type": "module",
	"description": "i18n extension that makes developers more productive.",
	"publisher": "inlang",
	"repository": {
		"type": "git",
		"url": "https://github.com/inlang/monorepo.git"
	},
	"icon": "assets/inlang.png",
	"version": "1.15.0",
	"engines": {
		"vscode": "^1.82.0"
	},
	"keywords": [
		"i18n",
		"localization",
		"translation"
	],
	"categories": [
		"Other",
		"Linters",
		"Visualization"
	],
	"main": "./dist/main.cjs",
	"contributes": {
		"commands": [
			{
				"command": "inlang.editMessage",
				"title": "Inlang: Edit a Message"
			},
			{
				"command": "inlang.extractMessage",
				"title": "Inlang: Extract Message"
			},
			{
				"command": "inlang.openInEditor",
				"title": "Inlang: Open in Editor"
			}
		],
		"configuration": {
			"properties": {
				"inlang.userId": {
					"type": "string",
					"default": ""
				},
				"inlang.disableRecommendation": {
					"type": "array",
					"default": []
				},
				"inlang.disableConfigFileCreation": {
					"type": "array",
					"default": []
				},
				"inlang.disableConfigFileDeletion": {
					"type": "array",
					"default": []
				}
			}
		}
	},
	"scripts": {
		"check": "tsc --noEmit",
		"build": "node ./build.js",
		"dev": "DEV=true node ./build.js",
		"package": "npx @vscode/vsce package",
		"---- TEST ----------------------------------------------------------": "",
		"pretest": "node ./build.js",
		"test": "tsc --noEmit && vitest run --passWithNoTests --coverage",
		"test:e2e": "npm run pretest && wdio run ./e2e/wdio.conf.ts",
		"---- LINT ----------------------------------------------------------": "",
		"lint": "eslint ./src --fix",
		"format": "prettier ./src --write",
		"---- OTHER ---------------------------------------------------------": "",
		"clean": "rm -rf ./dist ./.turbo ./node_modules"
	},
	"dependencies": {
		"@inlang/result": "*",
		"@inlang/telemetry": "*",
		"@lix-js/fs": "*",
		"@vitest/coverage-v8": "0.34.6",
		"https-proxy-agent": "7.0.2",
		"require-from-string": "^2.0.2",
		"throttle-debounce": "^5.0.0",
		"vitest": "0.34.6"
	},
	"devDependencies": {
		"@inlang/create-project": "*",
		"@inlang/sdk": "*",
		"@openscript/wdio-vscode-service": "5.2.4",
		"@types/fs-extra": "^11.0.2",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.2",
		"@types/require-from-string": "^1.2.1",
		"@types/throttle-debounce": "^5.0.0",
		"@types/ungap__structured-clone": "^0.3.0",
		"@types/vscode": "^1.82.0",
		"@vscode/test-electron": "^2.3.5",
		"@vscode/vsce": "^2.21.1",
		"@wdio/cli": "8.20.5",
		"@wdio/globals": "8.20.5",
		"@wdio/local-runner": "8.20.5",
		"@wdio/mocha-framework": "8.20.3",
		"@wdio/spec-reporter": "8.20.0",
		"@wdio/types": "8.20.0",
		"comment-json": "^4.2.3",
		"esbuild": "^0.19.4",
		"expect-webdriverio": "4.4.1",
		"fs-extra": "^11.1.1",
		"glob": "^10.3.10",
		"isomorphic-git": "1.24.5",
		"mocha": "^10.2.0",
		"node-fetch": "^3.3.2",
		"ovsx": "^0.8.3",
		"posthog-node": "^3.1.2",
		"ts-node": "10.9.1",
		"typescript": "5.2.2",
		"vscode-uri": "3.0.7",
		"webdriverio": "8.21.0"
	},
	"activationEvents": [
		"workspaceContains:**/project.inlang.json",
		"workspaceContains:**/inlang.config.js",
		"onStartupFinished"
	],
	"license": "Apache-2.0"
}

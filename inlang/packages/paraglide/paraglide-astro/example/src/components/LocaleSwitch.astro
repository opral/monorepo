---
import * as m from "../paraglide/messages.js"
---

<script>
	import { setLocale} from "../paraglide/runtime.js"

	document.querySelector("#en-locale")?.addEventListener('click', () => {
		setLocale("en")
	})

	document.querySelector("#de-locale")?.addEventListener('click', () => {
		setLocale("de")
	})
</script>

<div>
  <button id="en-locale">{m.switch_locale({ locale: "en" })}</button>
  <button id="de-locale">{m.switch_locale({ locale: "de" })}</button>
</div>
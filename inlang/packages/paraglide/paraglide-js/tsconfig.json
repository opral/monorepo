{
	"extends": "@opral/tsconfig/default",
	"include": ["src/**/*.js", "src/**/*.ts", "src/compiler/runtime/ambient.d.ts"],
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"sourceMap": false,
		"checkJs": true,
		"allowJs": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUncheckedIndexedAccess": true
	}
}

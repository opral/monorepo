{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "apps/main-web-app",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/apps/main-web-app"
    },
    {
      "name": "apps/vs-code-extension",
      "type": "extensionHost",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/apps/vs-code-extension"
      ],
      "outFiles": ["${workspaceFolder}/apps/vs-code-extension/dist/**/*.js"],
      "request": "launch"
    }
  ]
}
